{
  "manifest_version": 2,

  "name": "Helpdesk backup",
  "description": "Backup your data from Zendesk and other providers.",
  "version": "0.0.1",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo_16.png",
      "24": "logo_24.png",
      "32": "logo_32.png"
    },
    "default_title": "Helpdesk Backup"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "<all_urls>",
    "power"
  ]
}
